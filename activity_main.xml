<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="20dp"
       android:orientation="vertical"
       tools:ignore="MissingConstraints">
       <ImageView
           android:layout_width="match_parent"
           android:layout_height="100dp"
           android:layout_margin="20dp"
           android:id="@+id/registration_image"
           android:src="@mipmap/ic_launcher_round"/>
       <EditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="Name"
           android:inputType="text"
           android:id="@+id/reg_user_name"/>
       <EditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="Email id"
           android:id="@+id/reg_user_email_id"
           android:inputType="textEmailAddress"/>
       <EditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="Password"
           android:id="@+id/reg_pass_word"
           android:inputType="textPassword"/>
       <Button
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_margin="50dp"
           android:id="@+id/register"
           android:text="Register"/>

       <EditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="Email id"
           android:id="@+id/login_user_email_id"
           android:inputType="textEmailAddress"/>
       <EditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="Password"
           android:id="@+id/login_pass_word"
           android:inputType="textPassword"/>
       <Button
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_margin="50dp"
           android:id="@+id/log_in"
           android:text="log in"/>
       <ImageView
           android:layout_width="match_parent"
           android:layout_height="100dp"
           android:layout_margin="20dp"
           android:id="@+id/login_image"
           android:src="@mipmap/ic_launcher_round"/>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/retrieved_name"

           android:textSize="20sp"
           android:textColor="#000000"
           android:layout_marginBottom="10dp"/>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/retrieved_email"

           android:textSize="20sp"
           android:textColor="#000000"
           android:layout_marginBottom="10dp"/>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"

           android:textSize="20sp"
           android:textColor="#000000"
           android:id="@+id/retrieved_password"/>
   </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
